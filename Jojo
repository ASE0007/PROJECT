 #include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Structure to represent a book
struct Book {
    char title[100];
    char author[100];
    int id;
    struct Book* next;
};

// Global pointer to the head of the linked list
struct Book* head = NULL;

// Function to add a book to the library
void addBook() {
    struct Book* newBook = (struct Book*)malloc(sizeof(struct Book));
    printf("Enter book title: ");
    scanf("%s", newBook->title);
    printf("Enter author: ");
    scanf("%s", newBook->author);
    printf("Enter book ID: ");
    scanf("%d", &(newBook->id));
    newBook->next = head;
    head = newBook;
    printf("Book added successfully!\n");
}

// Function to delete a book by ID
void deleteBook() {
    int idToDelete;
    printf("Enter the ID of the book to delete: ");
    scanf("%d", &idToDelete);

    struct Book* current = head;
    struct Book* prev = NULL;
    int found = 0;

    while (current != NULL) {
        if (current->id == idToDelete) {
            if (prev == NULL) {
                // Deleting the first book in the list
                head = current->next;
            } else {
                prev->next = current->next;
            }
            free(current);
            found = 1;
            printf("Book with ID %d deleted successfully!\n", idToDelete);
            break;
        }
        prev = current;
        current = current->next;
    }

    if (!found) {
        printf("Book with ID %d not found.\n", idToDelete);
    }
}

// Function to display all books in the library
void displayBooks() {
    struct Book* current = head;
    if (current == NULL) {
        printf("Library is empty.\n");
        return;
    }
    printf("List of books in the library:\n");
    while (current != NULL) {
        printf("Title: %s\n", current->title);
        printf("Author: %s\n", current->author);
        printf("ID: %d\n", current->id);
        current = current->next;
    }
}

// Function to search for a book by title
void searchBook() {
    char searchTitle[100];
    printf("Enter the title to search for: ");
    scanf("%s", searchTitle);
    struct Book* current = head;
    int found = 0;
    while (current != NULL) {
        if (strcmp(current->title, searchTitle) == 0) {
            printf("Book found!\n");
            printf("Title: %s\n", current->title);
            printf("Author: %s\n", current->author);
            printf("ID: %d\n", current->id);
            found = 1;
            break;
        }
        current = current->next;
    }
    if (!found) {
        printf("Book not found.\n");
    }
}

// Function to create a book and add it to the library
void createBook() {
    struct Book* newBook = (struct Book*)malloc(sizeof(struct Book));
    printf("Enter book title: ");
    scanf("%s", newBook->title);
    printf("Enter author: ");
    scanf("%s", newBook->author);
    printf("Enter book ID: ");
    scanf("%d", &(newBook->id));
    newBook->next = head;
    head = newBook;
    printf("Book created and added to the library successfully!\n");
}

int main() {
    int choice;
    while (1) {
        printf("\nLibrary Management System\n");
        printf("1. Add a book\n");
        printf("2. Delete a book\n");
        printf("3. Display all books\n");
        printf("4. Search for a book by title\n");
        printf("5. Create a book\n");
        printf("6. Quit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                addBook();
                break;
            case 2:
                deleteBook();
                break;
            case 3:
                displayBooks();
                break;
            case 4:
                searchBook();
                break;
            case 5:
                createBook();
                break;
            case 6:
                exit(0);
            default:
                printf("Invalid choice. Please try again.\n");
        }
    }

    return 0;
}
    
